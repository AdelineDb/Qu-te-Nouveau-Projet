{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <a class ="btn btn-primary" href="{{ path('article_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'article.title' | trans}}</th>
                <th>{{ 'article.content' | trans }}</th>
                <th>{{ 'article.slug' | trans}}</th>
                <th>{{ 'article.author' | trans }}</th>
                <th>{{ 'article.category' | trans }}</th>
                <th>Tags</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.slug }}</td>
                <td>{{ article.author.email }}</td>
                <td>{{ article.category.name }}</td>
                <td>
                {% for tag in article.tags %}
                {{ tag.name }}
                {% endfor %}
                </td>
                <td>
                    <a href="{{ path('article_show', {'slug': article.slug}) }}">{{ 'article.show' | trans }}</a>
                    <a href="{{ path('article_edit', {'slug': article.slug}) }}">{{ 'article.edit' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'no.article' |trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
