{% extends 'base.html.twig' %}

{% block title %}
    {{ owner }}'s blog index
{% endblock %}


{% block body %}

    {{ form_start(form) }}
    {{ form_row(form.searchField) }}
    <button type="submit" name="btnSearch">Rechercher</button>
    {{ form_end(form) }}

    <h2>All articles from article's table : </h2>
    {% for article in articles %}
        <div>
            <h2>{{ loop.index }} / {{ article.title }} </h2>
            <h4> - Category </h4>
            {{ article.category.name }}
            <h4> - Tags </h4>
            {% for tag in article.tags %}
                {{ tag.name }}
            {% endfor %}
            <h4> - Contenu </h4>
            <p>{{ article.content }}</p>
        </div>
        <a href="{{ path('blog_article',{'slug': article.url, 'id': article.id}) }}">Go !</a>
    {% else %}
        Aucun article trouv√©.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Back to homepage
    </a>

{% endblock %}
