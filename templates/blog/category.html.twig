{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h2>All articles from category {{ category.name }} : </h2>
    {% for article in articles %}
        <div>
            <h2>{{ article.id }} / {{ article.title }} - Category : {{ article.category.name }}</h2>
            <p>{{ article.content }}</p>
        </div>
        <a href="{{ path('blog_article',{'slug': article.url}) }}">Go !</a>
    {% else %}
        Aucun article trouv√©.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>

{% endblock %}